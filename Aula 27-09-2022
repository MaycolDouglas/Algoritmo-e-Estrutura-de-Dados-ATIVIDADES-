def fatorial(n1):
    fat = n1
    resultado = 1
    for i in range(fat,0,-1):
        resultado = resultado * i
        print(resultado)

#ou


def fatorial_met_alt(fat):
    resultado = 1
    for i in range(fat, 0, -1):
        resultado = resultado * i
        print(resultado)



num = int(input("Número: "))

fatorial(num)

def mostrarX():
    global x
    x = 20
    print(x)

# variável global

x = 10
print(x)
mostrarX()
print(x)

#Retornando variavel

def fatorial(fat):
    resultado = 1
    for i in range(fat,0,-1):
        resultado *= i
    
    return resultado

x = fatorial(5)

print(x)

x = fatorial(5) # função
print("Resposta:", x) # proc


    
    

    
